    "version": "0.2.0",
    "configurations": [
        {
            "name": "GCC Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Test.exe", // Path to your compiled executable
            "args": [], // Arguments to pass to your program (if any)
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Current working directory
            "environment": [],
            "externalConsole": true, // Use an external console for input/output
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // Path to GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        
        }
    ]
}